<BOUCLE_motAgenda(MOTS){titre=Agenda}>
	#SET{motAgenda, #ID_MOT}
</BOUCLE_motAgenda>
<B_rubs>
	<select name="id_categorie" [id="(#ENV{id})"]>
			[(#TOTAL_BOUCLE|>{1}|oui)<option value="">&nbsp;</option>]
		<BOUCLE_rubs(RUBRIQUES){id_parent=#ENV{id_rubrique}} {par num titre,titre}{id_mot=#GET{motAgenda}}>
			<option value="#ID_RUBRIQUE" [(#ID_RUBRIQUE|=={#ENV{id_categorie}}|oui)selected="selected"]>[(#TITRE|supprimer_numero)]</option>
		</BOUCLE_rubs>
	</select>
</B_rubs>